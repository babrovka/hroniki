<div class="container s-page" style="margin-top: 200px; margin-bottom: 100px;">

  <div class="row">
    <div class="span6">
    <h1>Результаты поиска</h1>
    <div class="s-total">Найдено результатов: <span class="result_count"><%= @results.count %></span></div>
    </div>
    <div class="span6 s-form">
        <%= form_tag search_results_path, :id => 'bodysearch', remote: true do %>
          <label for="">Не нашли то, что искали? Попробуйте ещё раз: </label>
          <%= text_field_tag 'search', (params[:search  ]), size: 75 %>
          <a href="#" class="red_button" >Искать</a>
          <span class="label"></span>
          <span class="button"></span>
        <% end %>
    </div>
  </div>

  <div class="row s-result" id="results_area">
    <%= render 'results' %>
  </div>
  
</div>